<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlc.tienchin.channel.mapper.ChannelMapper">
    
    <resultMap type="com.zlc.tienchin.channel.domain.Channel" id="ChannelResult">
        <result property="channelId"    column="channel_id"    />
        <result property="channelName"    column="channel_name"    />
        <result property="status"    column="status"    />
        <result property="type"    column="type"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectChannelVo">
        select channel_id, channel_name, status, type, create_by, create_time, update_by, update_time, remark, del_flag from tienchin_channel
    </sql>

    <select id="selectChannelList" parameterType="com.zlc.tienchin.channel.domain.Channel" resultMap="ChannelResult">
        <include refid="selectChannelVo"/>
        <where>
            and del_flag = 0
            <if test="channelName != null  and channelName != ''"> and channel_name like concat('%', #{channelName}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>
    
    <select id="selectChannelByChannelId" parameterType="Long" resultMap="ChannelResult">
        <include refid="selectChannelVo"/>
        where channel_id = #{channelId}
    </select>

    <delete id="deleteChannelByChannelId" parameterType="Long">
        delete from tienchin_channel where channel_id = #{channelId}
    </delete>

    <delete id="deleteChannelByChannelIds" parameterType="String">
        delete from tienchin_channel where channel_id in 
        <foreach item="channelId" collection="array" open="(" separator="," close=")">
            #{channelId}
        </foreach>
    </delete>
</mapper>